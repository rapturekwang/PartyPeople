<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.partypeople.www.partypeople.activity.LoginActivity"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@drawable/login_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="회원가입 및 로그인"
        android:id="@+id/textView29"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:textSize="17sp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="건너뛰기"
        android:id="@+id/btn_skip"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/linearLayout6"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:layout_marginTop="24dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView14"
        android:src="@drawable/mask"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_facebook"
        android:background="@drawable/facebook"
        android:layout_marginBottom="15dp"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/linearLayout6"
        android:layout_above="@+id/linearLayout6" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout6"
        android:layout_above="@+id/textView30"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_signup"
            android:layout_weight="1"
            android:background="@drawable/signup"
            android:layout_marginRight="6.5dp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_login"
            android:layout_weight="1"
            android:background="@drawable/login"
            android:layout_marginLeft="6.5dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입을 하면 파티피플의"
        android:id="@+id/textView30"
        android:gravity="center_horizontal"
        android:layout_above="@+id/linearLayout"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:includeFontPadding="false"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 이용약관, "
            android:id="@+id/text_tos"
            android:gravity="center_horizontal"
            android:layout_alignParentEnd="true"
            android:textSize="12sp"
            android:textColor="#bc97ff"
            android:includeFontPadding="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개인정보 보호정책"
            android:id="@+id/text_policy"
            android:textColor="#bc97ff"
            android:textSize="12sp"
            android:includeFontPadding="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="에 동의하게 됩니다"
            android:id="@+id/text_message"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:includeFontPadding="false"/>

    </LinearLayout>

</RelativeLayout>
