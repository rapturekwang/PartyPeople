<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.partypeople.www.partypeople.fragment.DetailThreeFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="참여 후기"
        android:id="@+id/textView54"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="16dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView39"
        android:layout_below="@+id/textView54"
        android:layout_alignParentStart="true"
        android:src="@drawable/profile_img"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="16dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_comment"
        android:layout_alignTop="@+id/imageView39"
        android:layout_alignParentEnd="false"
        android:layout_toEndOf="@+id/imageView39"
        android:layout_marginLeft="14dp"
        android:layout_toStartOf="@+id/image_btn_send"
        android:layout_marginRight="14dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_btn_send"
        android:layout_alignTop="@+id/edit_comment"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_cast_light"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/listView"
        android:layout_below="@+id/edit_comment"
        android:layout_alignParentStart="true"
        android:dividerHeight="35dp"
        android:divider="@null"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

</RelativeLayout>
