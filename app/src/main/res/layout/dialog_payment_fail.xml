<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:id="@+id/relativeLayout1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/toolbarColor">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="결제가 실패하였습니다"
            android:id="@+id/textView78"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout2"
        android:layout_below="@+id/relativeLayout1"
        android:background="#f5f5f5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주문번호"
            android:id="@+id/textView62"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="22dp"
            android:textSize="13sp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모임명"
            android:id="@+id/textView63"
            android:layout_marginLeft="15dp"
            android:textSize="13sp"
            android:textColor="#000000"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/text_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="실패사유"
            android:id="@+id/textView69"
            android:layout_marginLeft="15dp"
            android:textSize="13sp"
            android:textColor="#000000"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="22dp"
            android:layout_alignTop="@+id/text_reason" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="come to house party"
            android:id="@+id/text_number"
            android:layout_marginLeft="120dp"
            android:textSize="13sp"
            android:textColor="#000000"
            android:layout_alignTop="@+id/textView62"
            android:layout_alignParentStart="true"
            android:layout_marginRight="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/text_name"
            android:textSize="13sp"
            android:textColor="#000000"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/text_number"
            android:layout_alignStart="@+id/text_number"
            android:layout_marginTop="17dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/text_reason"
            android:textSize="13sp"
            android:textColor="#000000"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/text_name"
            android:layout_alignStart="@+id/text_name"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="22dp" />

    </RelativeLayout>

    <Button
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:text="확인"
        android:id="@+id/btn_ok"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout2"
        android:background="@color/toolbarColor"
        android:textSize="15sp"
        android:textColor="#ffffff" />

</RelativeLayout>