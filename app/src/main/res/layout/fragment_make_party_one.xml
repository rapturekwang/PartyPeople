<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="249dp"
            android:id="@+id/pager"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/linearLayout"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="#ccb9d6"
                android:src="@drawable/camera"
                android:layout_weight="1"
                android:id="@+id/photo0" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="#ccb9d6"
                android:src="@drawable/camera"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:id="@+id/photo1"
                android:visibility="invisible" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="#ccb9d6"
                android:src="@drawable/camera"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:id="@+id/photo2"
                android:visibility="invisible" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="#ccb9d6"
                android:src="@drawable/camera"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:id="@+id/photo3"
                android:visibility="invisible" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="모임 이름"
            android:id="@+id/textView9"
            android:paddingLeft="16dp"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="14sp"
            android:background="#f5f5f5"
            android:layout_marginTop="3dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:id="@+id/edit_name"
            android:singleLine="true"
            android:layout_alignParentStart="true"
            android:hint="신나는 바베큐 파티 in 양평"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@null"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="모임 테마"
            android:id="@+id/textView11"
            android:layout_below="@+id/edit_name"
            android:layout_alignParentStart="true"
            android:textSize="14sp"
            android:paddingLeft="16dp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:background="#f5f5f5" />

        <GridView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gridView"
            android:layout_below="@+id/textView11"
            android:layout_alignParentStart="true"
            android:horizontalSpacing="5dp"
            android:numColumns="5"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="모임 일시"
            android:id="@+id/textView13"
            android:layout_alignParentStart="true"
            android:textColor="#000000"
            android:textSize="14sp"
            android:paddingLeft="16dp"
            android:gravity="center_vertical"
            android:background="#f5f5f5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="시작 일시"
            android:id="@+id/textView3"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/linearLayout3"
                android:layout_marginTop="10dp">

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_year"
                    android:layout_weight="3"
                    android:background="@drawable/rounded_rectangle_nomargin"
                    android:popupBackground="@drawable/dropdown"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="3dp" />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_month"
                    android:layout_weight="2"
                    android:background="@drawable/rounded_rectangle_nomargin"
                    android:popupBackground="@drawable/dropdown"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="2dp" />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_day"
                    android:layout_weight="2"
                    android:background="@drawable/rounded_rectangle_nomargin"
                    android:popupBackground="@drawable/dropdown"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="3dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/linearLayout3"
                android:layout_alignParentStart="true"
                android:id="@+id/linearLayout4"
                android:layout_marginTop="9dp">

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_noon"
                    android:layout_weight="3"
                    android:background="@drawable/rounded_rectangle_nomargin"
                    android:popupBackground="@drawable/dropdown"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="3dp" />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_hour"
                    android:layout_weight="2"
                    android:background="@drawable/rounded_rectangle_nomargin"
                    android:popupBackground="@drawable/dropdown"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="2dp" />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_minute"
                    android:layout_weight="2"
                    android:background="@drawable/rounded_rectangle_nomargin"
                    android:popupBackground="@drawable/dropdown"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="3dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="마감 일시"
                android:id="@+id/textView20"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout4"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textIsSelectable="false" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/textView20"
                android:layout_alignParentStart="true"
                android:id="@+id/linearLayout5"
                android:layout_marginTop="10dp">

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_year_end"
                    android:layout_weight="3"
                    android:background="@drawable/rounded_rectangle_nomargin"
                    android:popupBackground="@drawable/dropdown"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="3dp" />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_month_end"
                    android:layout_weight="2"
                    android:background="@drawable/rounded_rectangle_nomargin"
                    android:popupBackground="@drawable/dropdown"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="2dp" />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_day_end"
                    android:layout_weight="2"
                    android:background="@drawable/rounded_rectangle_nomargin"
                    android:popupBackground="@drawable/dropdown"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="3dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/linearLayout5"
                android:layout_alignParentStart="true"
                android:id="@+id/linearLayout6"
                android:layout_marginTop="9dp">

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_noon_end"
                    android:layout_weight="3"
                    android:background="@drawable/rounded_rectangle_nomargin"
                    android:popupBackground="@drawable/dropdown"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="3dp" />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_hour_end"
                    android:layout_weight="2"
                    android:background="@drawable/rounded_rectangle_nomargin"
                    android:popupBackground="@drawable/dropdown"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="2dp" />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_minute_end"
                    android:layout_weight="2"
                    android:background="@drawable/rounded_rectangle_nomargin"
                    android:popupBackground="@drawable/dropdown"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="3dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="모임 장소"
                android:id="@+id/textView22"
                android:layout_below="@+id/linearLayout6"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:background="#f5f5f5"
                android:layout_marginTop="21dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:id="@+id/linearLayout2"
                android:layout_below="@+id/textView22"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/make_rectangle">

                <AutoCompleteTextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/edit_location"
                    android:layout_below="@+id/textView22"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:hint="주소입력"
                    android:textSize="14dp"
                    android:textColor="#787878"
                    android:background="@null"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:dropDownWidth="match_parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_find_address"
                    android:background="@drawable/make_search_add"
                    android:layout_alignTop="@+id/edit_location"
                    android:layout_toRightOf="@+id/edit_location"/>

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/edit_detail_location"
                android:layout_below="@+id/linearLayout2"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/make_rectangle"
                android:layout_marginTop="7dp"
                android:hint="상세주소 입력"
                android:textSize="14sp"
                android:textColor="#474747"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="모임 세부 정보"
                android:id="@+id/textView24"
                android:layout_below="@+id/edit_detail_location"
                android:layout_alignParentStart="true"
                android:hint="오늘"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="#000000"
                android:paddingLeft="16dp"
                android:background="#f5f5f5"
                android:layout_marginTop="20dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edit_description"
                android:layout_below="@+id/textView24"
                android:layout_alignParentStart="true"
                android:hint="우리는 술타트업 \n오늘도 달린다... 양평에서 네트워킹 파티!! \n비지니스 시작"
                android:textSize="14sp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@null"
                android:layout_marginTop="20dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_bottom_photo"
                android:layout_below="@id/edit_description"
                android:layout_alignParentStart="true"
                android:src="@drawable/make_photo_add"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="프라이빗 설정"
                android:id="@+id/textView32"
                android:layout_below="@+id/img_bottom_photo"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:background="#f5f5f5"
                android:layout_marginTop="20dp" />

            <android.support.v7.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:id="@+id/switch_compat"
                android:checked="false"
                android:layout_alignTop="@id/textView32"
                android:paddingRight="16dp"
                android:layout_alignParentEnd="true"
                app:theme="@style/colorSitchStyle"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="비밀번호 (4자리)"
                android:id="@+id/textView33"
                android:layout_below="@+id/textView32"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:textSize="14sp"
                android:textColor="#000000" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/edit_party_password"
                android:maxLength="4"
                android:layout_below="@+id/textView33"
                android:enabled="false"
                android:inputType="number"
                android:singleLine="true"
                android:ems="8"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="13dp"
                android:textColor="#2d2d2d"
                android:paddingBottom="20dp" />

        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="다음으로"
            android:id="@+id/btn_next"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/textView7"
            android:background="@color/toolbarColor"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </LinearLayout>

</ScrollView>
