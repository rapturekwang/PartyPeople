<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity" >

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f5f5f5">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="204dp"
                android:id="@+id/header"/>

            <android.support.design.widget.TabLayout
                android:layout_below="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:id="@+id/tabs"
                android:background="@drawable/rounded_rectangle_nomargin"
                android:layout_gravity="center_vertical"
                app:tabTextAppearance="@style/UserPageTabText"
                app:tabMaxWidth="0dp"
                app:tabGravity="fill"
                app:tabMode="fixed"
                app:tabIndicatorColor="@null"
                app:tabTextColor="@color/tabUnfocused"
                app:tabSelectedTextColor="@color/tabFocused"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:layout_margin="12dp"
                android:layout_marginTop="12dp" />

            <android.support.v4.view.ViewPager
                android:layout_below="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/container"
                android:layout_gravity="center_horizontal" />

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="#f5f5f5"
        android:id="@+id/faketab_background"
        android:visibility="invisible"/>

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:id="@+id/fake_tabs"
        android:background="@drawable/rounded_rectangle_nomargin"
        android:layout_gravity="center_vertical"
        app:tabTextAppearance="@style/UserPageTabText"
        app:tabMaxWidth="0dp"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabIndicatorColor="@null"
        app:tabTextColor="@color/tabUnfocused"
        app:tabSelectedTextColor="@color/tabFocused"
        android:visibility="invisible"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_margin="12dp"
        android:layout_marginTop="12dp" />
</RelativeLayout>
