<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="204dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/bg" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_back"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/back"
        android:clickable="true"
        android:padding="19dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_modify"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/user_edit"
        android:clickable="true"
        android:paddingTop="17dp"
        android:paddingRight="16dp"
        android:paddingLeft="15dp"
        android:paddingBottom="15dp" />

    <ImageView
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:id="@+id/image_profile"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/default_profile"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정광희"
        android:id="@+id/text_name"
        android:layout_below="@+id/image_profile"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:includeFontPadding="false"
        android:layout_marginTop="8dp"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서울시 관악구"
        android:id="@+id/text_address"
        android:drawableLeft="@drawable/user_map_white"
        android:drawablePadding="4dp"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:layout_below="@+id/text_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/relativelayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="팔로잉 0 | 팔로워 0"
            android:id="@+id/text_follow"
            android:textColor="#ffffff"
            android:drawableLeft="@drawable/user_human"
            android:drawablePadding="6dp"
            android:layout_marginLeft="16dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="새 메시지"
            android:id="@+id/text_btn_message"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:drawableLeft="@drawable/user_email"
            android:drawablePadding="4dp"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/relativelayout_user"
        android:paddingBottom="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_btn_follow"
            android:layout_gravity="bottom"
            android:src="@drawable/user_follow"
            android:layout_marginLeft="16dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_btn_unfollow"
            android:layout_gravity="bottom"
            android:src="@drawable/unset_bookmark"
            android:layout_marginLeft="16dp"
            android:visibility="invisible"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_btn_message"
            android:layout_gravity="bottom"
            android:src="@drawable/user_message"
            android:layout_marginRight="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</RelativeLayout>