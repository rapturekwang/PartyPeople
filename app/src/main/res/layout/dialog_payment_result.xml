<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:id="@+id/relativeLayout1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/toolbarColor">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="결제가 완료되었습니다"
            android:id="@+id/textView78"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout2"
        android:layout_below="@+id/relativeLayout1"
        android:background="#f5f5f5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모임명"
        android:id="@+id/textView62"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:textSize="13sp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="결제금액"
        android:id="@+id/textView63"
        android:layout_marginLeft="15dp"
        android:textSize="13sp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/text_price"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="결제자"
        android:id="@+id/textView64"
        android:layout_marginLeft="15dp"
        android:textSize="13sp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/text_buyer"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:id="@+id/textView65"
        android:layout_marginLeft="15dp"
        android:textSize="13sp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/text_email"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="연락처"
        android:id="@+id/textView66"
        android:layout_marginLeft="15dp"
        android:textSize="13sp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/text_tel"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="결제시각"
        android:id="@+id/textView67"
        android:layout_marginLeft="15dp"
        android:textSize="13sp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/text_time"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카드승인번호"
        android:id="@+id/textView68"
        android:layout_marginLeft="15dp"
        android:textSize="13sp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/text_confirm_num"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="영수증보기"
        android:id="@+id/textView69"
        android:layout_marginLeft="15dp"
        android:textSize="13sp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/text_receipt"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="come to house party"
        android:id="@+id/text_name"
        android:layout_marginLeft="120dp"
        android:textSize="13sp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textView62"
        android:layout_alignParentStart="true"
        android:layout_marginRight="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 원"
        android:id="@+id/text_price"
        android:textSize="13sp"
        android:textColor="#000000"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/text_name"
        android:layout_alignStart="@+id/text_name"
        android:layout_marginTop="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="테스터"
        android:id="@+id/text_buyer"
        android:textSize="13sp"
        android:textColor="#000000"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/text_price"
        android:layout_alignStart="@+id/text_price"
        android:layout_marginTop="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="abcd@gmail.com"
        android:id="@+id/text_email"
        android:textSize="13sp"
        android:textColor="#000000"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/text_buyer"
        android:layout_alignStart="@+id/text_buyer"
        android:layout_marginTop="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01012345678"
        android:id="@+id/text_tel"
        android:textSize="13sp"
        android:textColor="#000000"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/text_email"
        android:layout_alignStart="@+id/text_email"
        android:layout_marginTop="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-07-07"
        android:id="@+id/text_time"
        android:textSize="13sp"
        android:textColor="#000000"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/text_tel"
        android:layout_alignStart="@+id/text_tel"
        android:layout_marginTop="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12345678"
        android:id="@+id/text_confirm_num"
        android:textSize="13sp"
        android:textColor="#000000"
        android:layout_alignLeft="@+id/text_name"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/text_time"
        android:layout_marginTop="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INIpayTest1234567890"
        android:id="@+id/text_receipt"
        android:textSize="13sp"
        android:textColor="#000000"
        android:autoLink="web"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/text_confirm_num"
        android:layout_alignStart="@+id/text_confirm_num"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="22dp"
        android:maxLines="3"/>

    </RelativeLayout>

    <Button
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:text="확인"
        android:id="@+id/btn_ok"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout2"
        android:background="@color/toolbarColor"
        android:textSize="15sp"
        android:textColor="#ffffff" />

</RelativeLayout>