<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="휴대폰 본인 인증"
            android:id="@+id/textView12"
            android:layout_alignParentStart="true"
            android:textSize="14sp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:background="#f5f5f5" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chboxPhone"
            android:layout_below="@+id/textView12"
            android:layout_alignParentStart="true"
            android:checked="false"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="본인 인증과 계좌 확인을 위해 "
            android:id="@+id/textView34"
            android:layout_alignTop="@+id/chboxPhone"
            android:layout_toEndOf="@+id/chboxPhone"
            android:includeFontPadding="false"
            android:textSize="14sp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개인정보 취급방침"
            android:id="@+id/text_policy"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:textColor="@color/toolbarColor"
            android:includeFontPadding="false"
            android:layout_below="@+id/textView34"
            android:layout_toEndOf="@+id/chboxPhone"
            android:layout_marginTop="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="에 동의합니다."
            android:id="@+id/textView49"
            android:includeFontPadding="false"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_alignTop="@id/text_policy"
            android:layout_toEndOf="@+id/text_policy"
            android:layout_marginLeft="2dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/img_btn_phone"
            android:layout_alignParentStart="true"
            android:src="@drawable/certi_phone_bf"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="22dp"
            android:layout_below="@+id/textView49" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="본인 계좌 등록"
            android:id="@+id/textView36"
            android:textSize="14sp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:background="#f5f5f5"
            android:layout_below="@+id/img_btn_phone"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* 개인은 본인 명의의 계좌만 등록 가능합니다."
            android:id="@+id/textView41"
            android:layout_below="@+id/textView36"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="21dp"
            android:textColor="#474747" />

        <Spinner
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:id="@+id/spinner_name"
            android:layout_below="@+id/textView41"
            android:layout_alignParentStart="true"
            android:background="@drawable/rounded_rectangle_nomargin"
            android:popupBackground="@drawable/dropdown"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="16dp" />

        <EditText
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_name"
            android:singleLine="true"
            android:layout_marginLeft="19dp"
            android:hint="이름 or 사업자명"
            android:layout_alignTop="@+id/spinner_name"
            android:layout_toEndOf="@+id/spinner_name"
            android:textSize="14sp"
            android:minWidth="129dp"
            android:gravity="center_horizontal"
            android:enabled="false"/>

        <EditText
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_num"
            android:inputType="number"
            android:singleLine="true"
            android:layout_toEndOf="@+id/spinner_name"
            android:layout_marginLeft="19dp"
            android:hint="사업자 번호 입력 (-없이 입력)"
            android:textSize="14sp"
            android:minWidth="129dp"
            android:gravity="center_horizontal"
            android:layout_below="@+id/edit_name"
            android:layout_marginTop="16dp" />

        <Spinner
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:id="@+id/spinner_bank"
            android:layout_below="@+id/edit_num"
            android:layout_alignParentStart="true"
            android:background="@drawable/rounded_rectangle_nomargin"
            android:popupBackground="@drawable/dropdown"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp" />

        <EditText
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_account"
            android:inputType="number"
            android:singleLine="true"
            android:layout_marginLeft="19dp"
            android:hint="계좌 번호 (-없이 입력)"
            android:layout_alignTop="@+id/spinner_bank"
            android:layout_toEndOf="@+id/spinner_bank"
            android:textSize="14sp"
            android:minWidth="129dp"
            android:gravity="center_horizontal"
            android:enabled="false"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/img_btn_account"
            android:src="@drawable/certi_account_bf"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/edit_account"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp" />

    </RelativeLayout>

</ScrollView>
