<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="모금 희망 금액"
                android:id="@+id/textView10"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:background="#f5f5f5"
                android:textSize="14sp"
                android:textColor="#000000"
                android:paddingLeft="16dp"
                android:gravity="center_vertical" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="57dp"
                android:id="@+id/edit_expect_pay"
                android:layout_below="@+id/textView10"
                android:inputType="number"
                android:singleLine="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="16dp"
                android:autoText="false"
                android:background="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="원"
                android:id="@+id/textView14"
                android:layout_alignTop="@+id/edit_expect_pay"
                android:layout_toEndOf="@+id/edit_expect_pay"
                android:layout_alignBottom="@+id/edit_expect_pay"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="모금 마감일"
                android:id="@+id/textView15"
                android:layout_below="@+id/edit_expect_pay"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:background="#f5f5f5" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:id="@+id/linearLayout3"
                android:layout_below="@+id/textView15"
                android:layout_alignParentStart="true"
                android:paddingTop="20dp">

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:id="@+id/spinner_year"
                    android:layout_weight="3"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/rounded_rectangle_nomargin"
                    android:popupBackground="@drawable/dropdown"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="3dp" />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:id="@+id/spinner_month"
                    android:layout_weight="2"
                    android:background="@drawable/rounded_rectangle_nomargin"
                    android:popupBackground="@drawable/dropdown"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp" />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:id="@+id/spinner_day"
                    android:layout_weight="2"
                    android:background="@drawable/rounded_rectangle_nomargin"
                    android:popupBackground="@drawable/dropdown"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="3dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="모금 방식 선택"
                android:id="@+id/textView17"
                android:layout_below="@+id/linearLayout3"
                android:layout_alignParentStart="true"
                android:background="#f5f5f5"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:textSize="14dp"
                android:textColor="#000000" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView17"
                android:layout_alignParentStart="true"
                android:orientation="horizontal"
                android:id="@+id/radioGroup">

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:text="고정금액"
                    android:id="@+id/radioButton"
                    android:checked="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="16dp" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:text="최소금액"
                    android:id="@+id/radioButton2"
                    android:checked="false"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="16dp" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:text="리워드별"
                    android:id="@+id/radioButton3"
                    android:checked="false"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="16dp" />
            </RadioGroup>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radioGroup"
                android:layout_alignParentStart="true"
                android:id="@+id/container"></FrameLayout>

            <!--<android.support.design.widget.TabLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/tabs"-->
                <!--app:tabMaxWidth="0dp"-->
                <!--app:tabGravity="fill"-->
                <!--app:tabMode="fixed"-->
                <!--android:layout_alignParentStart="true"-->
                <!--android:layout_below="@+id/textView17" />-->

            <!--<com.partypeople.www.partypeople.view.WithoutSwipeViewPager-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/pager"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:layout_below="@+id/tabs"-->
                <!--android:layout_alignParentStart="true" />-->

        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="다음으로"
            android:id="@+id/btn_next"
            android:background="@color/toolbarColor"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:textSize="20dp"
            android:textColor="#ffffff" />
    </LinearLayout>

</ScrollView>
