<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="모금 희망 금액"
                android:id="@+id/textView10"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:background="#f5f5f5"
                android:textSize="14sp"
                android:textColor="#000000"
                android:paddingLeft="16dp"
                android:gravity="center_vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:orientation="horizontal"
                android:id="@+id/linearLayout"
                android:layout_below="@+id/textView10">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_expect_pay"
                    android:inputType="number"
                    android:singleLine="true"
                    android:background="@null"
                    android:textSize="20sp"
                    android:textColor="#2d2d2d"
                    android:minWidth="30dp"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center_vertical"
                    android:hint="예) 100000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="원"
                    android:id="@+id/textView14"
                    android:textSize="20sp"
                    android:textColor="#2d2d2d"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="모금 마감일"
                android:id="@+id/textView15"
                android:layout_below="@+id/linearLayout"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:background="#f5f5f5" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:id="@+id/linearLayout3"
                android:layout_below="@+id/textView15"
                android:layout_alignParentStart="true"
                android:paddingTop="20dp">

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:id="@+id/spinner_year"
                    android:layout_weight="3"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/rounded_rectangle_nomargin"
                    android:popupBackground="@drawable/dropdown"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="3dp" />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:id="@+id/spinner_month"
                    android:layout_weight="2"
                    android:background="@drawable/rounded_rectangle_nomargin"
                    android:popupBackground="@drawable/dropdown"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp" />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:id="@+id/spinner_day"
                    android:layout_weight="2"
                    android:background="@drawable/rounded_rectangle_nomargin"
                    android:popupBackground="@drawable/dropdown"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="3dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:id="@+id/relativeLayout"
                android:layout_below="@+id/linearLayout3"
                android:background="#f5f5f5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="모금 방식 선택"
                    android:id="@+id/textView17"
                    android:layout_alignParentStart="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:textSize="14dp"
                    android:textColor="#000000" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_btn_example"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/example_icon"
                    android:padding="10dp"
                    android:layout_marginRight="6dp" />

            </RelativeLayout>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/relativeLayout"
                android:layout_alignParentStart="true"
                android:orientation="horizontal"
                android:id="@+id/radioGroup"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_rectangle_nomargin"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="고정금액"
                    android:id="@+id/radioButton"
                    android:checked="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:button="@null"
                    android:textColor="@drawable/radio_selector"/>

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="최소금액"
                    android:id="@+id/radioButton2"
                    android:checked="false"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:button="@null"
                    android:textColor="@drawable/radio_selector"/>

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="포함사항별"
                    android:id="@+id/radioButton3"
                    android:checked="false"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:button="@null"
                    android:textColor="@drawable/radio_selector"/>
            </RadioGroup>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radioGroup"
                android:layout_alignParentStart="true"
                android:id="@+id/container"></FrameLayout>

        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="다음으로"
            android:id="@+id/btn_next"
            android:background="@color/toolbarColor"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:textSize="20dp"
            android:textColor="#ffffff" />
    </LinearLayout>

</ScrollView>
