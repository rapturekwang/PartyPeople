<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingTop="30dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/text_item_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="Come to house party!" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/text_date"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_item_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/text_location"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/text_item_title" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/image_party"
        android:layout_below="@+id/text_date"
        android:layout_alignParentStart="true"
        android:src="@drawable/demo_img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/text_price"
        android:layout_below="@+id/image_party"
        android:layout_alignParentStart="true"
        android:text="25,000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/text_progress"
        android:layout_below="@+id/image_party"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/text_duedate"
        android:layout_below="@+id/image_party"
        android:layout_alignEnd="@+id/text_location"
        android:text="60일 남음" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/progressBar"
        android:layout_below="@+id/text_progress"
        android:layout_centerHorizontal="true"
        android:minHeight="20dip"
        android:maxHeight="20dip" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chbox_bookmark"
        android:layout_alignTop="@+id/image_party"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:focusable="false" />

</RelativeLayout>