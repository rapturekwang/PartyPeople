<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:background="@drawable/user_bg">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="84dp"
        android:id="@+id/image_party"
        android:src="@drawable/demo_img2"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Come to House Party!"
        android:id="@+id/text_title"
        android:textSize="14sp"
        android:drawableLeft="@drawable/user_culture"
        android:drawablePadding="4dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/image_party"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="10dp"
        android:includeFontPadding="false"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:ellipsize="end" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5월 7일 / 19:00"
        android:id="@+id/text_date"
        android:textSize="13sp"
        android:drawableLeft="@drawable/user_clock"
        android:drawablePadding="4dp"
        android:layout_below="@+id/text_title"
        android:layout_toEndOf="@+id/image_party"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="19dp"
        android:includeFontPadding="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서울시 서초구"
        android:id="@+id/text_location"
        android:textSize="13sp"
        android:drawableLeft="@drawable/user_map_gray"
        android:drawablePadding="6dp"
        android:layout_below="@+id/text_date"
        android:layout_toEndOf="@+id/image_party"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="21dp"
        android:includeFontPadding="false"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d0d0d0"
        android:layout_below="@+id/image_party"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/image_party"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout7">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25000원"
            android:id="@+id/text_payment"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_alignParentTop="false"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textSize="13sp"
            android:includeFontPadding="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50% 모임"
            android:id="@+id/text_progress"
            android:layout_alignTop="@+id/text_payment"
            android:layout_gravity="center_vertical"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_centerInParent="true"
            android:textSize="13sp"
            android:includeFontPadding="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24일 남음"
            android:id="@+id/text_duedate"
            android:layout_alignTop="@+id/text_progress"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:textSize="13sp"
            android:includeFontPadding="false"/>

    </RelativeLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:id="@+id/progressBar"
        android:progress="50"
        android:indeterminate="false"
        android:layout_below="@+id/linearLayout7"
        android:progressDrawable="@drawable/progress_bar"
        android:layout_alignParentStart="true" />

</RelativeLayout>