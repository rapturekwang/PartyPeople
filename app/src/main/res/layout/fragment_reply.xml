<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.partypeople.www.partypeople.fragment.ReplyFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativelayout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_back"
            android:src="@drawable/message_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="정광희"
            android:id="@+id/textView43"
            android:layout_gravity="center_vertical"
            android:layout_weight="9"
            android:layout_marginLeft="6dp"
            android:textSize="19sp"
            android:textColor="#474747" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_cancel"
            android:src="@drawable/x"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cfcfcf"
        android:layout_below="@+id/relativelayout"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="받은 메시지"
        android:id="@+id/textView57"
        android:layout_below="@+id/relativelayout"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:textSize="13dp"
        android:textColor="#787878" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="2015. 10. 25"
        android:id="@+id/textView44"
        android:layout_below="@+id/relativelayout"
        android:layout_alignParentEnd="true"
        android:textColor="#787878"
        android:textSize="13sp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="@drawable/bottom"
        android:text="안녕하세요!"
        android:id="@+id/textView46"
        android:layout_below="@+id/textView44"
        android:layout_alignParentStart="true"
        android:layout_marginTop="7dp"
        android:textSize="14sp"
        android:textColor="#000000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cfcfcf"
        android:layout_below="@+id/textView46"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:id="@+id/textView59" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="보내는 메시지"
        android:id="@+id/textView58"
        android:layout_marginLeft="15dp"
        android:textSize="13dp"
        android:textColor="#787878"
        android:layout_below="@+id/textView59"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="안녕하세요!"
        android:id="@+id/edit_reply"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@+id/textView58"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="13dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="보내기"
        android:id="@+id/btn_send"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/toolbarColor"
        android:textColor="#ffffff"
        android:textSize="20sp" />

