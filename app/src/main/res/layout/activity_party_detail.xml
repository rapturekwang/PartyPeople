<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.partypeople.www.partypeople.activity.PartyDetailActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="477dp"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout">

            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/img_pager"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/demo_img3" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView20"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/arrow_left"
                android:layout_marginLeft="16dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView21"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/arrow_right"
                android:layout_marginRight="16dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView17"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/detail_cocktail"
                android:layout_marginTop="327dp"
                android:layout_marginLeft="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Come to house party!"
                android:id="@+id/text_title"
                android:textColor="#ffffff"
                android:layout_alignTop="@+id/imageView17"
                android:layout_toEndOf="@+id/imageView17"
                android:layout_marginLeft="7dp"
                android:textSize="21sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView18"
                android:layout_below="@+id/imageView17"
                android:layout_alignParentStart="true"
                android:src="@drawable/detail_clock"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5월 7일 / 19:00 ~ 21:00"
                android:id="@+id/text_date"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:layout_alignTop="@+id/imageView18"
                android:layout_toEndOf="@+id/imageView18"
                android:layout_marginLeft="7dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView19"
                android:layout_alignTop="@+id/text_date"
                android:layout_toStartOf="@+id/text_location"
                android:src="@drawable/detail_location"
                android:layout_marginRight="7dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서울시 서초구"
                android:id="@+id/text_location"
                android:layout_alignTop="@+id/text_date"
                android:layout_alignParentEnd="true"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:layout_marginRight="16dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:background="#8c000000"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="250,000"
                    android:id="@+id/text_price"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:layout_above="@+id/progressBar"
                    android:layout_alignStart="@+id/progressBar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500,000"
                    android:id="@+id/text_total_price"
                    android:textColor="#ffffff"
                    android:layout_marginRight="16dp"
                    android:textSize="15dp"
                    android:layout_alignBottom="@+id/text_price"
                    android:layout_alignParentEnd="true" />

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:id="@+id/progressBar"
                    android:layout_alignParentStart="true"
                    android:indeterminate="false"
                    android:progress="50"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:progressDrawable="@drawable/progress_bar"
                    android:layout_centerVertical="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="51% 모금됨"
                    android:id="@+id/text_progress"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:layout_below="@+id/progressBar"
                    android:layout_alignStart="@+id/progressBar"
                    android:layout_marginTop="7dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="34일 남음"
                    android:id="@+id/text_duedate"
                    android:layout_alignTop="@+id/text_progress"
                    android:layout_alignEnd="@+id/text_total_price"
                    android:textColor="#ffffff"
                    android:textSize="15dp" />
            </RelativeLayout>

        </RelativeLayout>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chbox_img_bookmark"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:checked="false"
            android:button="@null"
            android:background="@drawable/detail_bookmark_selector"
            android:layout_marginTop="13dp"
            android:layout_marginRight="16dp"
            android:text="120"
            android:paddingStart="32dp" />

        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:id="@+id/tabs"
            android:layout_below="@+id/relativeLayout"
            android:layout_alignParentStart="true"
            app:tabTextAppearance="@style/TabText"
            app:tabMaxWidth="0dp"
            app:tabIndicatorColor="@null"
            app:tabTextColor="@color/tabUnfocused"
            app:tabSelectedTextColor="@color/tabFocused" />

        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:id="@+id/pager"
            android:layout_below="@+id/tabs"
            android:layout_alignParentStart="true" />

        <FrameLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pager"
            android:layout_centerHorizontal="true">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="참여하기"
                android:id="@+id/btn_parti"
                android:layout_gravity="center"
                android:background="@color/mainColor"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chbox_bookmark"
                android:layout_gravity="right|center_vertical"
                android:checked="false"
                android:button="@drawable/heart_selector"
                android:layout_marginRight="16dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_btn_share"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/detail_share"
                android:layout_marginLeft="16dp" />
        </FrameLayout>

    </RelativeLayout>

</ScrollView>
