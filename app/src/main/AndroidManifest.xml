<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.partypeople.www.partypeople" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/AppTheme.NoTitle" >
        </activity>
        <activity
            android:name=".activity.PartyDetailActivity"
            android:theme="@style/AppTheme.NoTitle" >
        </activity>
        <activity
            android:name=".activity.MakePartyActivity"
            android:theme="@style/AppTheme.NoTitle" >
        </activity>
        <activity
            android:name=".activity.UserActivity"
            android:theme="@style/AppTheme.NoTitle" >
        </activity>
        <activity
            android:name=".activity.ThemeActivity"
            android:theme="@style/AppTheme.NoTitle" >
        </activity>
        <activity
            android:name=".activity.SettingActivity"
            android:theme="@style/AppTheme.NoTitle" >
        </activity>
        <activity
            android:name=".activity.SearchActivity"
            android:theme="@style/AppTheme.NoTitle" >
        </activity>
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/AppTheme.NoTitle.FullScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoginActivity"
            android:theme="@style/AppTheme.NoTitle.FullScreen">
        </activity>
        <activity android:name=".activity.IntroActivity"
            android:theme="@style/AppTheme.NoTitle.FullScreen">
        </activity>
    </application>

</manifest>
